<%= content_for(:title, @nonprofit.name) %>

<h2><%= @nonprofit.name %></h2>

<p>_______________________</p>

<h3>Contribute</h3>


<form action="/contributions/" method="POST" id="payment-form">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>

  <button type="submit">Submit Payment</button>
</form>


<h3>Edit</h3>
<%= form_for @nonprofit, url: {action: "update"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "Update" %>
<% end %>

<%= link_to "Delete Nonprofit", nonprofit_path(@nonprofit), method: "delete" %>
